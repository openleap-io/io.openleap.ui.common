{
  "name": "@openleap-io/ui",
  "version": "1.0.0",
  "type": "module",
  "license": "UNLICENSED",
  "description": "Shared Vue 3 UI component library for OpenLeap products (Elara & Telos)",
  "repository": {
    "type": "git",
    "url": "https://github.com/openleap-io/io.openleap.ui.common.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/types/index.d.ts"
    },
    "./nuxt": {
      "import": "./dist/nuxt.mjs",
      "types": "./dist/types/nuxt.d.ts"
    },
    "./tokens/*": "./src/tokens/*",
    "./tailwind-preset": "./tailwind.preset.ts"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "peerDependencies": {
    "@tanstack/vue-table": "^8.0.0",
    "lucide-vue-next": ">=0.400.0",
    "reka-ui": "^2.0.0",
    "tailwindcss": "^4.0.0",
    "vue": "^3.5.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "splitpanes": "^3.2.0",
    "tailwind-merge": "^3.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@nuxt/kit": "^3.15.0",
    "@storybook/addon-a11y": "^8.5.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/vue3": "^8.5.0",
    "@storybook/vue3-vite": "^8.5.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/vue-table": "^8.21.3",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^28.0.0",
    "lucide-vue-next": "^0.469.0",
    "reka-ui": "^2.1.0",
    "storybook": "^8.5.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.2.0"
  },
  "scripts": {
    "build": "vite build && cp -r src/tokens dist/tokens",
    "build:watch": "vite build --watch",
    "dev": "storybook dev -p 6006",
    "storybook:build": "storybook build -o storybook-static",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  }
}
